<html>
    <head>
        <title>Tech Blog</title>
        <link href="css/bootstrap.min.css" rel="stylesheet">
    </head>
    <body>
        <div class="container">
            <nav class="navbar navbar-inverse">
                <div class="container-fluid">
                  <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                      <span class="icon-bar"></span>
                      <span class="icon-bar"></span>
                      <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="#">Tech Blog</a>
                  </div>
                  <div class="collapse navbar-collapse" id="myNavbar">
                    <ul class="nav navbar-nav">
                      <li class="active"><a href="/post">Post</a></li>
                      <li class="active"><a href="/post/addPost">Add Post</a></li>
                      <% if(userdata.role=="Admin"){%>
                      <li class="active"><a href="/allUsers">Admin</a></li>
                      <%}%>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                      <li><a href="/logout"><span class="glyphicon glyphicon-user"></span> Logout</a></li>
                    </ul>
                  </div>
                </div>
            </nav>
            <hr/>
            <div class="row">
                <div class="offset-md-5 col-md-5">
                    <h2 style="color:red"><%=errmessage%></h2>
                    <center>
                        <h2>Hi <%=userdata.name%></h2>
                    </center>
                    <hr/>
                    <form action="/addpost" method="POST">
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input name="email" class="form-control" id="email"/>
                        </div>
                        <div class="form-group">
                            <label for="password">Password</label>
                            <input name="password" class="form-control" id="password"/>
                        </div>
                        <button type="submit" class="btn btn-success">Login</button>
                        New User? <a href="/register">SignUp</a>
                    </form>
                </div>
            </div>
        </div>
    </body>
</html>